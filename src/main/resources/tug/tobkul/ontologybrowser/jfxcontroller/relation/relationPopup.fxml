        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="Library:"/>
        <ChoiceBox fx:id="libraryChoiceBox" prefWidth="150.0" GridPane.columnIndex="1"/>
        <Label text="System:" GridPane.rowIndex="1"/>
        <ChoiceBox fx:id="systemChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2">
            <children>
                <Label text="Entity A:"/>
                <ChoiceBox fx:id="entityAChoiceBox" prefWidth="150.0">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </ChoiceBox>
            </children>
            <GridPane.margin>
                <Insets right="10.0"/>
            </GridPane.margin>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <children>
                <Label alignment="TOP_CENTER" text="Cardinality:"/>
